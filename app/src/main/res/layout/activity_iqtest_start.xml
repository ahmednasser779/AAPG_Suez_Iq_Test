<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorAccent"
    tools:context=".IQTestStartActivity">

        <ImageView
            android:id="@+id/test_start_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/aapg_logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-That test prepared to calculate your IQ score. To complete that test you don't need to have great mathematic ability."
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_margin="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-Each Test has tottaly 10 questions and changing continuously."
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_margin="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-Time period is: 10 min."
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_margin="15dp"
            />

        <Button
            android:id="@+id/start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textColor="@color/colorAccent"
            android:background="@drawable/start_button_shape"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            />



</LinearLayout>